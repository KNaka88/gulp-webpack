{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": false
  },
  "exclude": [
    "node_modules"
  ]
}
